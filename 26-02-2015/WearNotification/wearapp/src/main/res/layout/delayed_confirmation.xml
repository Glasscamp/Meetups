<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:background="@color/card_default_background">

    <TextView
        android:id="@+id/spokenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure?"
        android:textSize="25dp"
        android:padding="10dp"
        android:textColor="@color/dark_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <android.support.wearable.view.DelayedConfirmationView
            android:id="@+id/delayed_confirmation"
            android:padding="8dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_full_cancel"
            app:circle_color="@color/blue"
            app:circle_radius="40dp"
            app:circle_radius_pressed="40dp"
            app:circle_padding="6dp"
            app:circle_border_width="6dp"
            app:circle_border_color="@color/orange"
            android:layout_gravity="bottom"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saving..."
            android:paddingLeft="5dp"
            android:paddingBottom="25dp"
            android:textSize="20dp"
            android:layout_gravity="bottom"
            android:textColor="@color/dark_grey"/>
    </LinearLayout>
</LinearLayout>
